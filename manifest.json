{
  "name": "Buildkite watcher",
  "description": "Show a notification when a build in buildkite finishes",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
        "background.js"
    ],
    "persistent": true
},
  "content_scripts": [{ "matches": ["https://buildkite.com/*"], "js": ["content.js"] }],
  "permissions": ["notifications", "activeTab", "tabs", "windows", "background"],
  "icons": { "16": "images/icon16.png", "48": "images/icon48.png", "128": "images/icon128.png" }
}
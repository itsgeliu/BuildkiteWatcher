{
  "name": "Buildkite watcher",
  "description": "Show a notification when a build in buildkite goes green",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{ "matches": ["https://buildkite.com/*"], "js": ["content.js"] }],
  "permissions": ["notifications", "activeTab", "tabs"],
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}